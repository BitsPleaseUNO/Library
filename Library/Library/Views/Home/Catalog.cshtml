@{
    ViewData["Title"] = "Search";
}
<form id="catalogSearchForm" class="form-horizontal" action="/Home/Result" method="post">
    <div class="form-group">
        <label for="inputSearch" class="col-sm-2 control-label">Search</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="search" id="inputSearch" placeholder="Search">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>